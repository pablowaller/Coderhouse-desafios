<div class="jumbotron bg-success text-light">
    <h2 style="text-align: center">Ingrese Producto</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/api/productos/guardar" id="products-form" method="POST">
                <div class="form-group">
                    <label for="title">Nombre</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Nombre de Producto" />
                </div>
                <div class="form-group">
                    <label for="price">Precio</label>
                    <input class="form-control" type="number" id="price" name="price"  placeholder="500"/>
                </div>
                <div class="form-group">
                    <label for="imageUrl">Foto URL:</label>
                    <input class="form-control" type="text" id="imageUrl" name="thumbnail" placeholder="image.png"/>
                </div>

                <button class="btn btn-dark btn-block">Enviar</button>
            </form>
        </div>
    </div>
</div>


<div id="productos"></div>